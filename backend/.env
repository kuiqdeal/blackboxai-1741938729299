# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/saas-app

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=24h

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Payment Gateway Configurations
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYMOB_API_KEY=your_paymob_api_key
PAYTABS_SERVER_KEY=your_paytabs_server_key
UTAP_API_KEY=your_utap_api_key

# Social Media API Keys
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Email Marketing Services
MAILCHIMP_API_KEY=your_mailchimp_api_key
SENDGRID_API_KEY=your_sendgrid_api_key

# AI Services
OPENAI_API_KEY=your_openai_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Cloud Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-bucket-name
AWS_REGION=us-east-1

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_VPN_SERVICE=true
ENABLE_CRYPTO_PAYMENTS=true

# Default Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Security
CORS_ORIGIN=http://localhost:3000
ENABLE_2FA=false
PASSWORD_SALT_ROUNDS=10

# Monitoring
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# VPN Configuration
VPN_PROVIDER_API_KEY=your_vpn_provider_api_key
VPN_DEFAULT_LOCATION=us-east

# Crypto Payment Configuration
CRYPTO_PAYMENT_GATEWAY=your_crypto_gateway
CRYPTO_MERCHANT_ID=your_merchant_id
CRYPTO_API_KEY=your_crypto_api_key

# CRM Integration
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_API_KEY=your_salesforce_api_key
ZOHO_API_KEY=your_zoho_api_key

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret

# API Version
API_VERSION=v1

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
